@page "/customers"
@using BlazorApp.Application.Interfaces
@using BlazorApp.Contracts.Api.Output
@inject ICustomerApi Api

<h3>Customers</h3>

@if (_loading)
{
    <p>Loading…</p>
}
else if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}
else if (_items.Count == 0)
{
    <p>No customers found.</p>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
            <button class="btn btn-sm btn-outline-primary me-2" @onclick="Prev" disabled="@(_page <= 1)">Prev</button>
            <button class="btn btn-sm btn-outline-primary" @onclick="Next" disabled="@(!_hasNext)">Next</button>
        </div>
        <div>Page @_page</div>
        <div>
            Showing @StartIndex–@EndIndex
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company</th>
                <th>Contact</th>
                <th>City</th>
                <th>Country</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in _items)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.CompanyName</td>
                    <td>@c.ContactName</td>
                    <td>@c.City</td>
                    <td>@c.Country</td>
                    <td>@c.Phone</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <div>
            <button class="btn btn-sm btn-outline-primary me-2" @onclick="Prev" disabled="@(_page <= 1)">Prev</button>
            <button class="btn btn-sm btn-outline-primary" @onclick="Next" disabled="@(!_hasNext)">Next</button>
        </div>
        <div>Page @_page</div>
        <div>
            Showing @StartIndex–@EndIndex
        </div>
    </div>
}

@code {
    private const int PageSize = 10;
    private int _page = 1;
    private bool _loading;
    private string? _error;
    private List<CustomerDto> _items = new();
    private bool _hasNext;

    private int StartIndex => (_items.Count == 0) ? 0 : ((_page - 1) * PageSize) + 1;
    private int EndIndex => (_items.Count == 0) ? 0 : ((_page - 1) * PageSize) + _items.Count;

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _loading = true;
        _error = null;
        try
        {
            _items = await Api.GetCustomersAsync(_page, PageSize);
            _hasNext = _items.Count >= PageSize;
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            _items = new();
            _hasNext = false;
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task Prev()
    {
        if (_page > 1)
        {
            _page--;
            await LoadAsync();
        }
    }

    private async Task Next()
    {
        if (_hasNext)
        {
            _page++;
            await LoadAsync();
        }
    }
}