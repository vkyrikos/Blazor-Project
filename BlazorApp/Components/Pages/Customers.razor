@page "/customers"
@rendermode InteractiveServer
@using BlazorApp.Contracts.Api.Output
@using Microsoft.AspNetCore.Components
@using BlazorApp.Application.Interfaces
@inject ICustomerApi Api
@inject NavigationManager Nav

<h3>Customers (page @Page)</h3>

@if (_loading)
{
    <p>Loading…</p>
}
else if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}
else if (_customers is { Count: > 0 })
{
    <table class="table" style="min-width: 720px;">
        <thead>
            <tr>
                <th style="width:80px;">Id</th>
                <th>Company</th>
                <th>Contact</th>
                <th>Country</th>
                <th style="width:120px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in _customers)
            {
                <tr @key="c.Id">
                    <td>@c.Id</td>
                    <td>@(c.CompanyName ?? "—")</td>
                    <td>@(c.ContactName ?? "—")</td>
                    <td>@(c.Country ?? "—")</td>
                    <td>
                        <a href="/customers/@c.Id" data-enhance-nav="false">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div style="margin-top: .75rem;">
        <button @onclick="Prev" disabled="@(_page <= 1)">Prev</button>
        <span style="margin:0 .5rem;">Page @_page</span>
        <button @onclick="Next">Next</button>
    </div>
}
else
{
    <p>No customers found.</p>
}

@code {
    [SupplyParameterFromQuery(Name = "page")]
    public int Page { get; set; } = 1;

    private int _page => Page <= 0 ? 1 : Page;

    private List<CustomerDto>? _customers;
    private bool _loading;
    private string? _error;

    protected override async Task OnParametersSetAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        _loading = true;
        _error = null;

        try
        {
            var list = await Api.GetCustomersAsync(_page);
            _customers = list?.ToList() ?? new List<CustomerDto>();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private void Prev()
    {
        if (_page > 1)
            Nav.NavigateTo($"/customers?page={_page - 1}");
    }

    private void Next()
    {
        Nav.NavigateTo($"/customers?page={_page + 1}");
    }
}